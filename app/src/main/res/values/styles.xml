<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorPrimaryVariant">@color/primaryLightColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
    </style>

    <!-- Dark Theme -->
    <style name="DarkTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#F3F0D7</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimaryDark">#F7D59C</item>
        <item name="colorPrimaryVariant">#ffffcd</item>
        <item name="colorOnPrimary">#000000</item>
        <item name="colorSecondary">#CEE5D0</item>
        <item name="colorSecondaryVariant">#9db39f</item>
        <item name="colorOnSecondary">#000000</item>
        <!-- Status bar color. -->
        <!-- Customize your theme here. -->
    </style>


    <style name="CustomChipTheme" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/selected_highlight</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:clickable">true</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/selected_text_highlighted</item>
        <item name="android:checkable">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">55dp</item>
    </style>

    <style name="Toolbar" parent="ThemeOverlay.AppCompat.Light">
        <item name="background">@color/primaryColor</item>
    </style>

    <style name="ChipForBottomView" parent="Widget.MaterialComponents.Chip.Action">
        <item name="android:clickable">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="chipBackgroundColor">#FFFFFF</item>
        <item name="android:textColor">#000000</item>
    </style>

</resources>
